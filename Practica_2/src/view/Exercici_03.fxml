<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Exercici_03" alignment="CENTER" hgap="10" vgap="10" prefWidth="1280" prefHeight="720">
    
    <!-- Definició del disseny de la interfície gràfica -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Etiqueta i camp de text per al ID del client -->
    <Label text="Client ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="clientIDField" promptText="Introdueix el client ID" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300"/>

    <!-- Etiqueta i ComboBox per seleccionar el producte -->
    <Label text="Producte:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="producteComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300"/>

    <!-- Etiqueta i camp de text per a la quantitat -->
    <Label text="Quantitat:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="quantitatField" promptText="Introdueix la quantitat" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="300"/>

    <!-- Botó per afegir la comanda -->
    <Button text="Afegir Comanda" onAction="#afegirComanda" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="150"/>
    
</GridPane>
