    <ComboBox fx:id="producteComboBox" layoutX="200.0" layoutY="100.0" prefWidth="300"/>

    <!-- Etiqueta i camp de text per al preu -->
    <Label layoutX="100.0" layoutY="150.0" text="Preu actual:" />
    <TextField fx:id="preuField" layoutX="200.0" layoutY="150.0" prefWidth="300"/>

    <!-- BotÃ³ per actualitzar el preu -->
    <Button text="Actualitzar Preu" layoutX="200.0" layoutY="200.0" onAction="#actualitzarPreu" prefWidth="150"/>

</AnchorPane>
