<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Exercici_04" prefWidth="1280" prefHeight="720">

    <Button layoutX="30.0" layoutY="30.0" onAction="#tornarAlMenu" text="Tornar" />

    <!-- Etiqueta i ComboBox per seleccionar el producte -->
